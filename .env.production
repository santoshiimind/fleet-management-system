# ──────────────────────────────────────────────────────────────
# Fleet Management System — Production Environment Variables
# Copy this file to .env and update the values
# ──────────────────────────────────────────────────────────────

# ── API Server ───────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_SECRET_KEY=your-super-secret-key-change-me-in-production
API_CORS_ORIGINS=["https://yourdomain.com"]

# ── Database ─────────────────────────────────────────────────
# SQLite (default — good for single-server deployments)
DB_DB_URL=sqlite:///data/fleet.db

# PostgreSQL (recommended for production)
# DB_DB_URL=postgresql://fleet_user:password@localhost:5432/fleet_management
DB_ECHO_SQL=false

# ── Gunicorn (Production Server) ─────────────────────────────
GUNICORN_WORKERS=4
LOG_LEVEL=info

# ── Telematics ───────────────────────────────────────────────
TELEM_OBD_PORT=COM3
TELEM_OBD_BAUDRATE=9600
TELEM_CAN_INTERFACE=socketcan
TELEM_CAN_CHANNEL=vcan0
TELEM_CAN_BITRATE=500000
TELEM_GPS_PORT=COM4
TELEM_GPS_BAUDRATE=9600
TELEM_TELEMETRY_INTERVAL=2.0
TELEM_DATA_RETENTION_DAYS=90

# ── MQTT Broker ──────────────────────────────────────────────
TELEM_MQTT_BROKER=localhost
TELEM_MQTT_PORT=1883
TELEM_MQTT_TOPIC_PREFIX=fleet/vehicles
# TELEM_MQTT_USERNAME=
# TELEM_MQTT_PASSWORD=

# ── Alert Thresholds ────────────────────────────────────────
ALERT_SPEED_LIMIT_WARNING=120
ALERT_SPEED_LIMIT_CRITICAL=150
ALERT_ENGINE_TEMP_WARNING=100
ALERT_ENGINE_TEMP_CRITICAL=115
ALERT_RPM_WARNING=5500
ALERT_RPM_CRITICAL=6500
ALERT_FUEL_LOW_WARNING=15
ALERT_FUEL_LOW_CRITICAL=5
